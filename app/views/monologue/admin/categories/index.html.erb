<h2><%= link_to t(".create"), new_admin_category_path, class: "btn btn-success" %></h2>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th><%= t(".name") %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= link_to t(".edit"), edit_admin_category_path(cat), class: "btn btn-small" %></td>
      <td>
        <% if cat.is_removeable? %>
          <%= link_to t(".delete"), [:admin, cat], data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-small btn-danger" %>
        <% else %>
          <a href="#" class="btn btn-small btn-danger disabled"><%= t(".delete") %></a>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>